<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bg_tree">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="0dp"
        android:id="@+id/imageView2"
        android:src="@drawable/tree"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_dday"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/heart_small"
        android:background="#00000000"
        android:onClick="onClick_view"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/button_schedule"
        android:layout_marginEnd="22dp" />

    <ImageButton
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:src="@drawable/ic_add"
        android:onClick="onClick_add"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignEnd="@+id/button_setting"
        android:layout_marginTop="25dp" />

    <ImageButton
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_heartree"
        android:id="@+id/button_heartree"
        android:onClick="onClick_view"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dday"
        android:id="@+id/button_dday"
        android:onClick="onClick_dday"
        android:layout_alignTop="@+id/button_heartree"
        android:layout_toEndOf="@+id/button_heartree"
        android:layout_marginStart="66dp" />

    <ImageButton
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_schedule"
        android:id="@+id/button_schedule"
        android:onClick="onClick_calendar"
        android:layout_alignTop="@+id/button_heartree"
        android:layout_toStartOf="@+id/button_setting"
        android:layout_marginEnd="61dp" />

    <ImageButton
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_setting"
        android:id="@+id/button_setting"
        android:onClick="onClick_to_setting"
        android:layout_alignTop="@+id/button_schedule"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sub"
        android:id="@+id/button4"
        android:layout_above="@+id/imageButton"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView_cn"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button_setting" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="fm"
        android:id="@+id/textView_fm"
        android:layout_below="@+id/textView_cn"
        android:layout_alignStart="@+id/textView_cn" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:id="@+id/logout"
        android:onClick="onClick_logout"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toStartOf="@+id/imageButton"
        android:layout_alignEnd="@+id/button_dday" />


</RelativeLayout>
